{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "module": "commonjs",
    "types": ["node", "jest"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "declaration": true
  }
}
